import spacy

try:
    import neuralcoref
    nlp = spacy.load("en_core_web_sm")
    neuralcoref.add_to_pipe(nlp)
    text = "Karishma went to the library because she wanted to borrow a book."
    doc = nlp(text)
    print("Original Text:")
    print(text)
    print("\nResolved Text:")
    print(doc._.coref_resolved)
except ImportError:
    nlp = spacy.load("en_core_web_sm")
    text = "Karishma went to the library because she wanted to borrow a book."
    doc = nlp(text)
    print("Neuralcoref not installed. Showing named entities and pronouns instead:\n")
    for token in doc:
        if token.pos_ == "PRON" or token.ent_type_:
            print(f"{token.text} â†’ {token.head.text}")
